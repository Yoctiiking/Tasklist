{% extends 'base.html.twig' %}

{% block title %}TÃ¢che{% endblock %}

{% block content %}
    <div class="container">
        <div class="form">
            {{ form(form) }}     
        </div>

        <div class="tasklist">
            <ul class="list">
                {% for task in tasks %}
                    {% if task.isCompleted %}
                        {% set textdeco = 'line-through' %}
                        {% set color = 'gray' %}
                        {% set style = 'italic' %}
                    {% else %}
                        {% set textdeco = 'none' %}
                        {% set color = 'black' %}
                        {% set style = '' %}
                    {% endif %}
                    <li >
                        <a style="text-decoration: {{ textdeco }}; color: {{ color }}; font-style: {{style}}" href="{{ path('task', {id: task.id}) }}">{{ task.name }}</a> 
                    </li>
                {% endfor %}
            </ul> 
        </div>
    </div>
{% endblock %}
